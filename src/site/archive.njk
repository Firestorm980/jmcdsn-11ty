---js
{
	layout: "layouts/page.njk",
	permalink: "/my-thoughts/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}index.html",
	title: "Blog",
	subheading: "My thoughts about stuff and things",
	bodyClass: "archive",
	pagination: {
		data: "collections.posts",
		size: 10,
		alias: "posts",
		addAllPagesToCollections: true,
		before: function(data) {
			return data.sort((a,b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
		}
	}
}
---

<div class="section">
	<h2 class="sr-only">Posts</h2>
	<div class="section__module">
		<div class="section__loop">
			{% set postListItems = pagination.items %}
			{% include "components/post-list.njk" %}
		</div>
		<div class="section__footer">
			{% include "components/pagination.njk" %}
		</div>
	</div>
</div>
