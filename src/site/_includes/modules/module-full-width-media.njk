<section class="section section--module section--module-full-width-media">
	{% include 'components/module-base.njk' %}
	<div class="section__module">

		<div class="media <?php echo esc_attr( "media--$type" ); ?>">
			<?php
			switch ( $type ) {
				case 'image':
					$attr = array(
						'data-lazyload' => true,
					);
					echo wp_get_attachment_image( $module_media['image'], 'xxlarge', false, $attr );
					break;
				case 'video':
					break;
				case 'gallery':
					jmcdsn_the_slideshow( $module_media['gallery'], $module_media['gallery_options'] );
					break;
			}
			?>
		</div>

	</div>
</section>
