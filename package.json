{
  "name": "elevenpack",
  "version": "1.1.0",
  "description": "Publish a website using Eleventy, webpack and PostCSS",
  "author": "Adrian Gheorghe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deviousdodo/elevenpack"
  },
  "scripts": {
    "build": "npm-run-all clean build:assets build:site",
    "build:assets": "NODE_ENV=production webpack --mode=production",
    "build:site": "NODE_ENV=production eleventy",
    "clean": "rm -rf ./dist",
    "dev": "npm-run-all clean --parallel dev:*",
    "dev:assets": "npm run webpack:assets",
    "dev:site": "NODE_ENV=development eleventy --serve",
    "webpack:assets": "NODE_ENV=development webpack --watch --mode=development"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.3.1",
    "normalize.css": "^8.0.1",
    "tailwindcss": "^2.0.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-navigation": "^0.1.5",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "autoprefixer": "^10.0.4",
    "babel-loader": "^8.2.2",
    "css-loader": "^3.6.0",
    "cssnano": "^4.1.10",
    "dayjs": "^1.8.27",
    "eslint": "^7.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "luxon": "^1.24.1",
    "mini-css-extract-plugin": "^1.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.14",
    "postcss-import": "^13.0.0",
    "postcss-loader": "^4.1.0",
    "postcss-nested": "^5.0.2",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-manifest-plugin": "^2.2.0",
    "webpackbar": "^5.0.0-3"
  }
}
